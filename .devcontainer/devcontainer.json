{
    "name": "ADL ROS2 Devcontainer",
    "privileged": true,
    "remoteUser": "ros",
    "dockerComposeFile": "./docker-compose.yaml",
    "service": "devcontainer",
    "workspaceFolder": "/home/ros/ros2_ws/src/adl-ros2",
    // "runServices": [
    //     "devcontainer",
    //     "docs",
    //     "foxglove"
    // ],
    // "workspaceMount": "source=${localWorkspaceFolder},target=/ros2_ws,type=bind",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        "ghcr.io/larsnieuwenhuizen/features/zellij:0": {
            "version": "0.0.4"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // Python extensions
                "ms-python.python",
                "ms-python.debugpy",
                "charliermarsh.ruff",
                //
                "ms-iot.vscode-ros",
                "tamasfe.even-better-toml",
                "ms-azuretools.vscode-docker",
                "github.vscode-pull-request-github",
                "mhutchie.git-graph",
                // C++
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "xaver.clang-format",
                "josetr.cmake-language-support-vscode",
                "twxs.cmake",
                "cheshirekow.cmake-format",
            ]
        }
    },
    "containerEnv": {
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "XDG_RUNTIME_DIR": "/tmp",
        "ROS_DOMAIN_ID": "01",
        "WAYLAND_DISPLAY": "vscode-wayland-da9f32aa-00db-4560-b70a-d04a19bb5ba8.sock"
  },
        "mounts": [
            "source=${localEnv:XDG_RUNTIME_DIR}/vscode-wayland-da9f32aa-00db-4560-b70a-d04a19bb5ba8.sock,target=/tmp/vscode-wayland-da9f32aa-00db-4560-b70a-d04a19bb5ba8.sock,type=bind"
            ],
        "ELECTRON_OZONE_PLATFORM_HINT": "x11",
        "GDK_BACKEND": "x11",
        "QT_QPA_PLATFORM": "xcb"
    },
    "remoteEnv": {
        "WAYLAND_DISPLAY": "",
        "ELECTRON_OZONE_PLATFORM_HINT": "x11",
        "GDK_BACKEND": "x11",
        "QT_QPA_PLATFORM": "xcb",
        "XDG_RUNTIME_DIR": "/tmp"
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/ros/ros2_ws/src/adl-ros2,type=bind,consistency=cached",
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--device=/dev/input/js0", // Pass the joystick device
        // "--runtime=nvidia",
        // "--gpus",
        // "all"
    ],
    "postCreateCommand": "/bin/bash /home/ros/ros2_ws/src/adl-ros2/.devcontainer/post_create.sh",
    "postStartCommand": "source /home/ros/ros2_ws/install/setup.bash 2>/dev/null || echo 'Workspace not built yet - run the colcon build task'"
}