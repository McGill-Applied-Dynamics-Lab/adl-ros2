{
    "name": "ADL ROS2 Devcontainer",
    "privileged": true,
    "remoteUser": "ros",
    "dockerComposeFile": "./docker-compose.yaml",
    "service": "devcontainer",
    "workspaceFolder": "/home/ros/ros2_ws/src/adg-ros2",
    // "runServices": [
    //     "devcontainer",
    //     "docs",
    //     "foxglove"
    // ],
    // "workspaceMount": "source=${localWorkspaceFolder},target=/ros2_ws,type=bind",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        "ghcr.io/larsnieuwenhuizen/features/zellij:0": {
            "version": "0.0.4"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // Python extensions
                "ms-python.python",
                "ms-python.debugpy",
                "charliermarsh.ruff",
                //
                "ms-iot.vscode-ros",
                "tamasfe.even-better-toml",
                "ms-azuretools.vscode-docker",
                "github.vscode-pull-request-github",
                "mhutchie.git-graph",
                // C++
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "xaver.clang-format",
                "josetr.cmake-language-support-vscode",
                "twxs.cmake",
                "cheshirekow.cmake-format",
            ]
        }
    },
    "containerEnv": {
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "01"
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/ros/ros2_ws/src/adg-ros2,type=bind,consistency=cached",
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--device=/dev/input/js0", // Pass the joystick device
        // "--runtime=nvidia",
        // "--gpus",
        // "all"
    ],
    // "postCreateCommand": "pip install -e python/robotic_arm_controller"
    "postStartCommand": "/bin/bash /home/ros/ros2_ws/src/adg-ros2/.devcontainer/post_create.sh"
}